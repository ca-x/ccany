# Enhanced CCany Environment Configuration
# Copy this file to .env and fill in your actual values

# ==============================================
# API Configuration
# ==============================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
AZURE_API_VERSION=2023-12-01-preview

# Claude API Configuration (for direct Claude support)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_BASE_URL=https://api.anthropic.com

# ==============================================
# Model Configuration
# ==============================================

# Enhanced Model Configuration
BIG_MODEL=gpt-4o
SMALL_MODEL=gpt-4o-mini
REASONING_MODEL=gpt-4o
LONG_CONTEXT_MODEL=gpt-4o

# ==============================================
# Server Configuration
# ==============================================

# Server Settings
HOST=0.0.0.0
PORT=8082
LOG_LEVEL=INFO

# ==============================================
# Performance Configuration
# ==============================================

# Enhanced Performance Settings
MAX_TOKENS_LIMIT=8192
MIN_TOKENS_LIMIT=1
REQUEST_TIMEOUT=120
MAX_RETRIES=3
TEMPERATURE=0.7
STREAM_ENABLED=true

# ==============================================
# Database Configuration
# ==============================================

# Database Settings
DATABASE_URL=sqlite3:///app/data/ccany.db
DATABASE_ENCRYPTION_KEY=your_encryption_key_here
CLAUDE_PROXY_DATA_PATH=./data

# ==============================================
# Security Configuration
# ==============================================

# Security Settings
CLAUDE_PROXY_MASTER_KEY=your_master_key_here
JWT_SECRET=your_jwt_secret_here

# ==============================================
# Monitoring and Logging
# ==============================================

# Monitoring Settings
ENABLE_MONITORING=true
ENABLE_REQUEST_LOGGING=true
LOG_RETENTION_DAYS=30

# Grafana Configuration
GRAFANA_PASSWORD=admin

# ==============================================
# Build Configuration
# ==============================================

# Build Settings
VERSION=dev
BUILD_TIME=unknown

# ==============================================
# Claude Code Compatibility
# ==============================================

# Claude Code Settings
CLAUDE_CODE_COMPATIBLE=true
CLAUDE_CONFIG_PATH=/home/appuser/.claude.json